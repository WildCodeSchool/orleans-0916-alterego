
{% block stylesheet %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/font-awesome-4.7.0/css/font-awesome.min.css') }}">
{% endblock %}
{% block fos_user_content %}
    <div class="content">
        {% block sonata_user_login %}
            <div class="panel panel-info">

                <div class="panel-body">

                    {% block sonata_user_login_error %}
                        {% if error %}
                            <div class="alert alert-danger alert-error">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                    {% endblock %}

                    {% block sonata_user_login_form %}
                        <form action="{{ path("fos_user_security_check") }}" method="post" role="form"
                              class="form-horizontal">
                            <table>
                                <tr>
                                    <td><label for="username"
                                        ><i class="fa fa-user-o" aria-hidden="true"></i>
                                        </label>
                                    </td>
                                    <td>
                                        <div><input type="text" class="form-control" id="username"
                                                    name="_username" value="{{ last_username }}"
                                                    required="required" placeholder="Username"/></div>
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="password"
                                        ><i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                        </label>
                                    </td>
                                    <td>
                                        <div><input type="password" class="form-control"
                                                    id="password" name="_password"
                                                    required="required" placeholder="Password"/></div>
                                    </td>
                                </tr>
                            </table>

                            <div class="form-group">
                                <input type="submit" id="_submit" name="_submit" class="btn"
                                       value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
                            </div>



                            <div class="form-group remember">
                                <div class="checkbox control-group">
                                    <label class="remember_label" for="remember_me">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                        {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                    </label>
                                </div>
                            </div>

                            <div class="form-group control-group mdp_forget">
                                <a href="{{ path('fos_user_resetting_request') }}">{{ 'forgotten_password'|trans({}, 'SonataUserBundle') }}</a>
                            </div>


                        </form>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
    </div>
    <img class="logo_group" src="{{ asset('assets/images/logo-safran.png') }}" alt="">

{% endblock fos_user_content %}
