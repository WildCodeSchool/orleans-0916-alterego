{% extends 'AlterEgoBundle:Worker:layout_worker.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 top_worker">
                <img class="img_top_w" src="{{ asset ('assets/images/logo-safran.png') }}" alt="">
            </div>
        </div>
        <div class="row">
            <div class="top_worker_by">
                <h2 class="col-xs-offset-6 col-xs-2 by">by</h2>
                <img class="col-xs-2 img_top_right_w" src="{{ asset ('assets/images/logo_alterego.svg') }}" alt="">
            </div>
        </div>
    </div>
            <h1 class="name_worker">Bonjour {% if app.user.firstname  %}{{ app.user.firstname|title }}{% else %} {{ app.user.username|title }}{% endif %}</h1>

        <div class="tuile">
            <div class="tuile_header">
                <img class="ico_clock_worker fa fa-clock-o" alt="">
                <h2 class="title_seance_worker">Ma prochaine Séance</h2>
            </div>
    {% if reservation is empty %}
        <div class="tuile_body">
            <p>vous n'avez pas de réservation</p>
            <a class="btn btn-primary" href="{{ path('seances') }}"> Réserver un séance ?</a>
        </div>
    {% else %}
        <div class="tuile_body">
            <p class="time_info_worker">Séance de {{ reservation.creneau.activite.activite|upper }}, <br/>le {{ reservation.creneau.dateheure|date("d m y") }} à <span>{{ reservation.creneau.dateheure|date("H:i") }}</span></p>
            <p class="lieu_worker">Lieu : {{ reservation.creneau.lieu }} </p>
            <a href="{{ path('worker_index') }}">
                {#<div class="start_activity">
                    <p>DEMARRER</p>
                    <img class="start_coach" src="{{ asset ('assets/images/start.png') }}" alt="">
                </div>#}
            </a>
            {#{% if reservation.creneau.dateheure < date("now") %}#}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <input class="btn-lg btn-success" type="submit" value="CHECK-IN" />
                {{ form_end(form) }}
            {#{% endif %}#}
        </div>
    {% endif %}
        </div>

        <div class="tuile">
            <div class="tuile_header actu_rh">
                <img class="ico_clock_worker" src="{{ asset ('assets/images/hp.png') }}" alt="">
                <h2 class="title_seance_worker">Votre Actualité RH</h2>
            </div>
            <div class="tuile_body">
                <p class="rh_news">Safran vous souhaite une excellente journée !</p>
            </div>
        </div>

{% endblock %}