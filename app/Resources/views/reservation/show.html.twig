{% block body %}

    <h1>Reservation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Statuspayment</th>
                <td>{{ reservation.statusPayment }}</td>
            </tr>
            <tr>
                <th>Notecoach</th>
                <td>{{ reservation.noteCoach }}</td>
