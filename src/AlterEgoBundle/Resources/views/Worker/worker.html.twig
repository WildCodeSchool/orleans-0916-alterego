{% extends 'AlterEgoBundle:Worker:layout_worker.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 top_worker_zone">
            <img class="col-xs-4 img-circle img-responsive top_worker" src="{{ asset ('assets/images/photo_user_worker.jpg') }}" alt="">
            <h1 class="col-xs-8 name_user_worker">Bonjour, Sarah Croche</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-11 block_worker">
            <h1 class="title_h1_worker">Ajouter / rechercher une séance</h1>
            <img class="badge_img" src="{{ asset ('assets/images/icon_ajout_worker.png') }}" alt="">
        </div>
        <div class="col-xs-11 block_worker">
            <h1 class="title_h1_worker">Dernière séance :</h1>
            <h2 class="last_seance_date">du 05/12/2016</h2>
            <img class="icon_last_seance" src="{{ asset ('assets/images/icon_time.png') }}" alt="">
            <p class="text_last_seance">Durée : 1h</p>
            <img class="icon_last_seance" src="{{ asset ('assets/images/icon_calorie.png') }}" alt="">
            <p class="text_last_seance">386 KCal dépensées</p>

        </div>
        <div class="col-xs-11 block_worker">
            <h1 class="title_h1_worker">Prochaine séance :</h1>
            <h2 class="last_seance_date">Coach :</h2>
            <img class="col-xs-offset-1 col-xs-6 img-circle link_photo_coach" src="{{ asset ('assets/images/photo_coach.jpg') }}" alt="">
            <p class="col-xs-offset-2 col-xs-6 text_next_seance">Séance de Yoga - 1h</p>
            <p class="col-xs-offset-2 col-xs-6 text_next_seance">le 15 Déc. 2016 - 16:30</p>
            <p class="col-xs-offset-2 col-xs-6 text_next_seance">Salle : Halle des sports</p>
        </div>

        <div class="col-xs-11 block_worker">
            <h1 class="title_h1_worker">Mes collègues</h1>
            
        </div>
    </div>
</div>
{% endblock %}
