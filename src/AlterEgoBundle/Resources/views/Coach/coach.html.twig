{% extends 'AlterEgoBundle:Coach:layout_coach.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="//arshaw.com/js/fullcalendar-1.5.3/fullcalendar/fullcalendar.css" rel="stylesheet"/>
    <link href="http://arshaw.com/js/fullcalendar-1.5.3/fullcalendar/fullcalendar.print.css" rel="stylesheet"/>
{% endblock %}




{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 top_coach">
                <img class="img_top_w" src="{{ asset ('assets/images/logo_alterego.svg') }}" alt="">
            </div>
        </div>
    </div>
    <h1 class="name_worker">
        Bonjour {% if app.user.firstname %}{{ app.user.firstname|title }}{% else %} {{ app.user.username|title }}{% endif %}</h1>
    <div class="tuile">
        <div class="tuile_header">
            <h2><i class="fa fa-clock-o i_left" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;Mon  prochain cours
                <a href=""><i class="fa fa-plus i_right" aria-hidden="true"></i></a></h2>

        </div>
        <div class="tuile_body">
            <div class="info">
            </div>
            <button class="start_activity" type="submit" value="Create">
                <p>DEMARRER</p>
                <img class="start_coach" src="{{ asset ('assets/images/start.svg') }}" alt="">
            </button>

        </div>
    </div>


{% endblock %}