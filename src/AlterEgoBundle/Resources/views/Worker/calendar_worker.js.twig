$(document).ready(function () {

    var date = new Date();
    var d = date.getDate();
    var m = date.getMonth();
    var y = date.getFullYear();

    $('#calendar').fullCalendar({

        timeFormat: 'H:mm',
        firstDay: 1,
        defaultView: 'agendaWeek',
        eventColor: '#378006',
        contentHeight:400,     //specific height instead of auto
        slotDuration: '00:60:00',

        header: {
            center: 'agendaWeek,month' // buttons for switching between views
        },

        views: {
            basicWeek: {

            }
        },

        events: [
            {% for reservation in reservations %}
            {
                title: '{{ reservation.creneau.activite.activite }}',
                start: '{{ reservation.creneau.dateheure|date('Y-m-d\\TH:i:sP') }}',
                end: '{{ reservation.creneau.dateheure|date_modify('+'~reservation.creneau.duree ~'minutes')|date('Y-m-d\\TH:i:sP') }}',
                url: '{{ path('seance_show',{'id': reservation.creneau.id}) }}',
                allDay: false
            },
            {% endfor %}
        ],

        eventClick: function(event) {
            if (event.url) {
                window.location(event.url);
                return false;
            }
        }


    })

})

