{% extends 'AlterEgoBundle:Worker:layout_worker.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-11 badges_worker">
            <h1 class="title1_badge">Vous avez obtenu le badge Azur! Félicitation!</h1>
            <img class="icon_ajout_worker" src="{{ asset ('assets/images/gamification_badge_300.png') }}" alt="">
            <h2 class="title2_badge">Plus que 3 séances pour atteindre le badge supérieur</h2>
            <div class="progress">
                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%">
                    <span class="sr-only">45% Complete</span>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-11 badges_worker badges_worker_challenge">
                <h1 class="title1_badge">Challenge Entreprise</h1>
                <img class="icon_ajout_worker" src="{{ asset ('assets/images/natation.png') }}" alt="">
                <h2 class="title2_badge">Equipe DSI Paris : 65Km</h2>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 65%">
                        <span class="sr-only">65% Complete</span>
                    </div>
                </div>
                <h2 class="title2_badge">Votre équipe: 45Km</h2>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%">
                        <span class="sr-only">45% Complete</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
